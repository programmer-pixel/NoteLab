{
  "name": "NoteLab",
  "description": "A Google Chrome extension that makes taking notes 100 times easier.",
  "version": "0.1",
  "manifest_version": 3,
  "permissions": ["tabs", "contextMenus"],
  "action": {
    "default_popup": "notes.html",
    "default_icon": {
      "48": "logo.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ]
}